<style lang="scss">
  .container{
    width: 100%;
    display: flex;
    align-items: center;
    background-color: #010C1A;
  }
  .container__image{
    width: 50%;
    background-size: cover;
    display: flex;
    justify-content: center;

    & .container__logo{
      width: 70px;
      height: 70px;
      background-size: contain;
      border-radius: 50%;

    }
  }
  .nav__container {
    width: 50%;
    height: 40px;
    font-size: 1rem;
    display: flex;
    justify-content: center;
    gap: 20px;
    align-items: center;
    .nav__container--item{
      text-decoration: none;
      color:#fff;

    }

  }
</style>
